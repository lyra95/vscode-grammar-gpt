{
  "name": "grammar-gpt",
  "displayName": "grammar-gpt",
  "description": "fix typos and grammar errors with chatgpt",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "grammar-gpt.fix",
        "title": "fix typos and grammer issues in the selection"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "grammar-gpt.fix"
        }
      ]
    },
    "keybindings": [
      {
        "command": "grammar-gpt.fix",
        "key": "ctrl+g f",
        "when": "editorHasSelection"
      }
    ],
    "configuration": [
      {
        "title": "Grammar GPT",
        "properties": {
          "grammar-gpt.OpenAI.APIKey": {
            "description": "Your OpenAI API Key",
            "type": "string"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.79.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "openai": "^3.3.0"
  }
}
